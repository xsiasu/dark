{% style %}
  .embla-kim-{{ section.id }} {
    margin: auto;
    --slide-height: 500px;
    --slide-size: 100%;
    padding:30px 0 25px 0;
    overflow:hidden
  }
  .embla-kim-{{ section.id }} .embla__viewport {
    position:relative;
  }
  .embla-kim-{{ section.id }} .embla__container {
    backface-visibility: hidden;
    display: flex;
    touch-action: pan-y;
    margin-left: calc(var(--slide-spacing) * -1);
  }
  .embla-kim-{{ section.id }} .embla__slide {
    flex: 0 0 var(--slide-size);
    min-width: 0;
    padding-left: var(--slide-spacing);
  }
  .embla-kim-{{ section.id }} .image-s-size {
    display:block;

    position:relative;
    z-index:1000
  }
  .embla-kim-{{ section.id }} .wrap-content_box {
    width: 100%;
    height: 100%;
    position: relative;
  }
  .embla-kim-{{ section.id }} .wrap-content_box .content_box {
    position:absolute;
    top:50%;
    transform: translate(10px, calc(-50% - 100px));
  }
  .embla-kim-{{ section.id }} .embla__slide__content {
    box-shadow: inset 0 0 0 0.2rem var(--detail-medium-contrast);
    border-radius: 1.5rem;
    align-items: center;
    justify-content: center;
    height: var(--slide-height);
    position:relative;
    overflow:hidden;

    background-image:url('')
  }
  .embla-kim-{{ section.id }} .embla__slide__content:after {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: calc(1 + var(--z-index-base));
    pointer-events: none;
    content: '';
    background:linear-gradient(to top, rgb(77 136 0 / 23%) 0%, rgb(146 51 51 / 16%) 100%);
    backdrop-filter:blur(30px);
    -webkit-backdrop-filter: blur(30px);
  }

  .embla-kim-{{ section.id }} .embla__button--prev {
    position:absolute;
    top:50%;
    left:10px;
    background:#d2d2d7a3
  }
  .embla-kim-{{ section.id }} .embla__button--prev .icon-caret {
    transform:rotate(90deg);
    width:2.5rem
  }
  .embla-kim-{{ section.id }} .embla__button--next {
    position:absolute;
    top:50%;
    right:10px;
    background:#d2d2d7a3
  }
  .embla-kim-{{ section.id }} .embla__button--next .icon-caret {
    transform:rotate(-90deg);
    width:2.5rem
  }
  .embla-kim-{{ section.id }} .embla__buttons {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.6rem;
    align-items: center;
  }
  .embla-kim-{{ section.id }} .embla__button {
    -webkit-tap-highlight-color: rgba(var(--text-high-contrast-rgb-value), 0.5);
    -webkit-appearance: none;
    appearance: none;
    touch-action: manipulation;
    display: inline-flex;
    text-decoration: none;
    cursor: pointer;
    z-index: 1;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    cursor: pointer;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: #d2d2d7a3;
    color: #0000008f;
  }
  .embla-kim-{{ section.id }} .embla__button:disabled {
    background: var(--detail-high-contrast);
  }
  .embla-kim-{{ section.id }} .embla__pagination {
    display: flex;
    justify-content: center;
    margin-top: 1.5rem;
    background:transparent
  }
  .embla-kim-{{ section.id }} .embla__dot {
    display: flex;
    width:12px;
    height:12px;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    background:transparent;
  }
  .embla-kim-{{ section.id }}  .embla__pagination .embla__dot:after {
      width: 6px;
      height: 6px;
      border-radius: 50%;
      display: block;
      content: '';
      background:#636363
    }
  .embla-kim-{{ section.id }}  .embla__pagination .embla__dot--selected:after {
    background:var(--bs-blue)
  }
  .embla-kim-{{ section.id }} .content_box {
    position: relative;
    width: 100%;
    color: #434040;
    padding: 0;
    z-index: 100;
  }
  .embla-kim-{{ section.id }}  .banner__number {
    font-size:1.5rem;
  }
  .embla-kim-{{ section.id }}  .banner__heading {
    font-size:4.3rem;
    color:var(--bs-body-color);

  }
  .embla-kim-{{ section.id }}  .banner__text {
    max-width:calc(100% - 5rem)

  }
  .embla-kim-{{ section.id }}  .banner__buttons {
    font-size:1rem
  }
  @media (max-width: 768px) {
    .embla-kim-{{ section.id }}  {
      --slide-height: auto;
    }
    .embla-kim-{{ section.id }} .wrap-content_box {
      position:static
    }
    .embla-kim-{{ section.id }} .wrap-content_box .content_box {
      width: 100%;
      position: absolute;
      top:initial;
      bottom:0;
      transform:none
    }
    .embla-kim-{{ section.id }} .embla__pagination {
      margin-top:2rem
    }
    .embla-kim-{{ section.id }} .embla__slide {
      flex: 0 0 80%; /* Breakpoint SM slide covers 50% of the viewport */
    }
    .embla-kim-{{ section.id }} .content_box {
      position: absolute;
      bottom: 0;
      left: 0;
      box-sizing: border-box;
      width: 100%;
      color: #fff;
      padding: 10px;
      background:linear-gradient(1deg, black, transparent);
      z-index: 10000;
    }
    .embla-kim-{{ section.id }} .banner__heading {
      font-size:1.5rem;
      color:#fff
    }
    .embla-kim-{{ section.id }} .banner__text {
      font-size:1.2rem;
      color:rgba(255,255,255,.7)
    }
    .embla-kim-{{ section.id }} .banner__text p a {
      color:#fff
    }
    .embla-kim-{{ section.id }} .embla__button--prev,
    .embla-kim-{{ section.id }} .embla__button--next {
      display:none
    }

  }

  @media (max-width: 980px) {
      .embla-kim-{{ section.id }} {
        margin: auto;
        /* --slide-height: auto; */
        --slide-spacing: 1.5rem;
        --slide-size: 50%;
        padding:30px 0 !important;
        overflow:hidden
    }
    .embla-kim-{{ section.id }} .embla__viewport {
      position:relative;
    }
    .embla-kim-{{ section.id }} .embla__container {
      backface-visibility: hidden;
      display: flex;
      touch-action: pan-y;
      margin-left: calc(var(--slide-spacing) * -1);
    }
    .embla-kim-{{ section.id }} .embla__slide {
      flex: 0 0 var(--slide-size);
      min-width: 0;
      padding-left: var(--slide-spacing);
    }
    .embla-kim-{{ section.id }} .image-s-size {
      display:block;
      width:100%;
      height:auto
    }
    .embla-kim-{{ section.id }} .embla__slide {
      flex: 0 0 100%; /* Breakpoint SM slide covers 50% of the viewport */
    }


  }
{% endstyle %}
<div class="page-width">
  <section class="embla-kim-{{ section.id }} embla-kim" data-options='{"loop": true, "speed": 5}'>
    <div class="embla__viewport">
      <div class="embla__container">
        {%- for block in section.blocks -%}
          <div class="embla__slide">
            <a
              {% if block.settings.link %}
                href="{{ block.settings.link }}"
              {% else %}
                role="link" aria-disabled="true"
              {% endif %}
              class=""
            >
              <div
                class="embla__slide__content"
                {%- if block.settings.image != blank -%}
                  style="background-image:url('{{ block.settings.image | image_url: width: 2000  }}');background-repeat:no-repeat;background-size:cover;"
                {% endif %}
              >
                <div class="row">
                  <div class="col-12 col-lg-4 offset-lg-1">
                    <div class="wrap-content_box">
                      <div class="content_box">
                        {%- if block.settings.number != blank -%}
                          <h2 class="banner__number">
                            {{ block.settings.number }}
                          </h2>
                        {%- endif -%}
                        {%- if block.settings.heading != blank -%}
                          <h2 class="banner__heading fw-bold">
                            {{ block.settings.heading }}
                          </h2>
                        {%- endif -%}
                        {%- if block.settings.subheading != blank -%}
                          <div class="banner__text rte" {{ block.shopify_attributes }}>
                            <p>{{ block.settings.subheading }}</p>
                          </div>
                        {%- endif -%}
                      </div>
                    </div>
                  </div>
                  <div class="col-12 col-lg-4 offset-lg-2">
                    {%- if block.settings.image != blank -%}
                      {{ block.settings.image | image_url: width: 500 | image_tag: class: 'image-s-size sway' }}

                    {%- else -%}
                      {%- capture placeholder -%}{% cycle 'hero-apparel-1', 'hero-apparel-2','hero-apparel-3' %}{%- endcapture -%}
                      {{ placeholder | placeholder_svg_tag: 'Slideshow__Image PlaceholderBackground__Svg' }}
                    {%- endif -%}
                  </div>
                </div>
              </div>
            </a>
          </div>

          {% comment %} ksk 0427 {% endcomment %}
        {%- else -%}
          {% for i in (1..5) %}
            {%- assign placeholder_image_carousel = 'hero-apparel-1' -%}
            {%- assign placeholder_heading = 'タイトル-' | append: forloop.rindex -%}
            {%- assign placeholder_subheading = 'サブタイトル-' | append: forloop.rindex -%}

            <div class="embla__slide">
              <div
                class="embla__slide__content"
              >
                {{ placeholder_image_carousel | placeholder_svg_tag }}

                <div class="content_box">
                  <h2 class="banner__heading inline-richtext">
                    {{ placeholder_heading }}
                  </h2>

                  <div class="banner__text rte" {{ block.shopify_attributes }}>
                    <p>{{ placeholder_subheading }}</p>
                  </div>
                </div>
              </div>
            </div>
          {%- endfor -%}

          {% comment %} ksk 0427 {% endcomment %}
        {% endfor %}
      </div>

      <button class="embla__button embla__button--prev" type="button">
        {% render 'icon-caret' %}
      </button>

      <button class="embla__button embla__button--next" type="button">
        {% render 'icon-caret' %}
      </button>
    </div>

    <div class="embla__pagination"></div>
  </section>
</div>
